

@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}

<h1>All Departments</h1>


<br/>
<br />

<a asp-action="Create" asp-controller" ="Department" class="= btn btn-primary">Create Department</a>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class=" table tab-hover table-striped ">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date O Creation</th>
                <th>Delails</th>
                <th>Update</th>
                <th>Delete</th>



            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            {
                <tr>
                    <td>@item Code</td>
                    <td>@item Nmae </td>
                    <td>@item CreateAt </td>
                    <td>
                        <a asp-action="Detsils" class="btn btn-warning">Detsils</a>
                     </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            
            
            }
        </tbody>



    </table>

}
else {
    <div class="mt-4 alert alert-info">
        <h4>
            There are no Department :(
        </h4>
    </div>


}
